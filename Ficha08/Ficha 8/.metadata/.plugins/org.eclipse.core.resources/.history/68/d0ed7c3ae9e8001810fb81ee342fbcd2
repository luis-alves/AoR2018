/**
 * Definição de uma class de empréstimo bancário.
 *
 * @sid 2012
 * @aid 
 */
public class Emprestimo {
    private double prestacao;
    private int numMeses;
    private double TAXA = 0.01; // 1% taxa de juros
    private double divida;
    private double tempo;
    private double totalJurosAcumulado;
    
    public Emprestimo() {
        this.divida = 700 * (1+TAXA);
        this.mes = 1;
    }
    
    public int pagamento(int mes, double prestacao) {
        int NUMERO_MAX_MESES = 4 *12;
        int total = 0;
        if (mes >= NUMERO_MAX_MESES) {
            System.out.println("Erro! O número de meses excede o limite"
                            + " que nosso banco permite");
        } else {
            this.numMeses = mes;
            total++;
        }
        if (prestacao > 50) {
            System.out.println("Erro! Colocou uma prestação superior ao "
                            + "permitido, pelos nossos serviços");
        } else {
            this.prestacao = prestacao; 
            if (total == 1) {
            System.out.println("Prestação processada.");
            }
            total++;
        }
        
        return total;
    }
    

}
