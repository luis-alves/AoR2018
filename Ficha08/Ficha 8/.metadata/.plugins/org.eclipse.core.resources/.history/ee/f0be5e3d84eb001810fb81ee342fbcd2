import java.util.Arrays;

/**
 * Breve descrição do código
 *
 * @sid 2012
 * @aid 8.7
 */
public class Turma {
    String nome;
    int quantidadeAlunosMax;
    Aluno[] alunos;
    
    public Turma(String nome, int numMaxAlunos) {
        this.nome = nome;
        this.quantidadeAlunosMax = numMaxAlunos;
        this.alunos = new Aluno[this.quantidadeAlunosMax];
    }
    
    public void adicionarAluno(Aluno a) {
        int contador = 0;
        for (Aluno aluno : alunos) {
            if (aluno instanceof Aluno) {
                contador++;
            }
        }
        if (contador < this.alunos.length) {
            for (Aluno aluno : alunos) {
                if (aluno instanceof Aluno) {
                    continue;
                } else {
                    aluno = a;
                    System.out.println("Aluno " + a + " introduzido.");
                }
            }
        }
    }
    
    public void removerAluno(Aluno a) {
        
    }

    public void getAlunos() {
        System.out.println(Arrays.toString(this.alunos));
    }

    public void setAlunos(Aluno[] alunos) {
        this.alunos = alunos;
    }
    
    public boolean eAluno(Aluno aluno) {
        int contador = 0;
        for (Aluno aluno1 : alunos) {
            if (aluno.equals(aluno1)) {
                contador++;
            }
        }
        return contador == 1;
    }
    
    
}
