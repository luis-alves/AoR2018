import java.util.Scanner;

/**
 * Simulador de um empréstimo.
 *
 * @sid 2012
 * @aid 
 */
public class Principal {

    public static void main(String[] args) {
        Emprestimo emprestimo = new Emprestimo();
        Scanner sc = new Scanner(System.in);

        int mes = 0;
        int valor = 0;
        do {
            System.out.println("Qual é o mês da prestação?");
            mes = sc.nextInt();
            System.out.println("Qual é o valor da prestação?");
            valor = sc.nextInt();
            emprestimo.pagamento(mes, valor);
            
        } while (mes >= emprestimo.getLimiteMeses() && valor < emprestimo.getLimitePrestacao());
    }

}
