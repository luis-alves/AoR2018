/**
 * Definição de uma class de empréstimo bancário.
 *
 * @sid 2012
 * @aid 
 */
public class Emprestimo {
    private double prestacao;
    private int numMeses;
    private double TAXA = 0.01; // 1% taxa de juros
    private double divida;
    private double tempo;
    private double totalJurosAcumulado;
    private int NUMERO_MAX_MESES = 4 *12;
    private int LIMITE_PRESTACAO = 50;
    
    public Emprestimo() {
        this.divida = 100;
    }
    
    public int getLimiteMeses() {
        return NUMERO_MAX_MESES;
    }

    public int getLimitePrestacao() {
        return LIMITE_PRESTACAO;
    }

    public void pagamento(int mes, double prestacao) {
        if (mes >= NUMERO_MAX_MESES) {
            System.out.println("Erro! O número de meses excede o limite"
                            + " que nosso banco permite");
            System.out.println();
        } 
        if (prestacao > 50) {
            System.out.println("Erro! Colocou uma prestação superior ao "
                            + "permitido, pelos nossos serviços");
            System.out.println();
        } 
        if (mes < NUMERO_MAX_MESES && prestacao <= LIMITE_PRESTACAO) {
            this.numMeses = mes;
            this.prestacao = prestacao; 
            System.out.println("Prestação processada.");
        }
    }
    
    public void obterRelatorio() {
        double quantidadeMesesEmFalta = this.numMeses;
        double capitalAmortizado = this.prestacao;

        for (int i = 0; i < this.numMeses; i++) {
            double vJuro = calcJuro();
            double vEmp = calcDivida();
            System.out.println("N.º Mês: " + i + " Capital: " + this.prestacao +
                               " valor de Juro: " + vJuro + 
                               "Valor em divida: " + vEmp);
        }
    }
    
    private double calcJuro() {
        return this.divida * this.TAXA;
        
    }
    
    private double calcDivida() {
        this.divida = (this.divida - this.prestacao) * this.TAXA; 
        return this.divida;
    }
    

}
