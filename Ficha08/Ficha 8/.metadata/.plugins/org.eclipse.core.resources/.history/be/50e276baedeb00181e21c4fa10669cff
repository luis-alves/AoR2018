import java.util.Arrays;

/**
 * Breve descrição do código
 *
 * @sid 2012
 * @aid 8.8
 */
public class Loja {
    private String nomeLoja;
    private String nomeDono;
    private Flor[] transacoes;

    public Loja(String nomeLoja, String nomeDono) {
        this.nomeDono = nomeDono;
        this.nomeLoja = nomeLoja;
        this.transacoes = new Flor[3];
    }
    
    public void vendaFlor(Flor a, double qt) {
        int i = procurarLocalArmazem(this.transacoes);
        a.setQtVendida(qt);
        this.transacoes[i] = a;  
    }
    
    private int procurarLocalArmazem(Flor[] a) {
        for (int i = 0; i < a.length; i++) {
            if (a[i] != null) {
                return i;
            }
        }
        int index = a.length;
        // Não tem espaço, logo duplicar espaço
        Flor[] temp = new Flor[a.length*2];
        for (int i = 0; i < a.length; i++) {
            temp[i] = a[i]; 
        }
        a = temp;
        return index;
       
    }

    public String getNomeLoja() {
        return nomeLoja;
    }

    public String getNomeDono() {
        return nomeDono;
    }

    public void getTransacoes() {
        System.out.println(Arrays.toString(this.transacoes));
    }
    
    
}
