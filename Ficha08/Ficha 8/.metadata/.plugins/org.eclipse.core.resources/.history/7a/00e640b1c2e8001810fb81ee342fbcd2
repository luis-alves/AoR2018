    public Fracao adicao(Fracao num) {
        Fracao num1 = new Fracao();
        
        int mdc = minimoDenominadorComum(this.denominador, num.denominador);
        num1.denominador = this.denominador * mdc;
        
        return num1;
    }
    
    private int minimoDenominadorComum(int num1, int num2) {
        int[] arr1 = new int[100];
        int[] arr2 = new int[100];
        for (int i = 0; i < 100; i++) {
            arr1[i] = num1 * (i); 
            arr2[i]= num2 * (i); 
        }
        System.out.println(Arrays.toString(arr1));
        System.out.println(Arrays.toString(arr2));
        int mdc = 0;
        for (int i = 1; i < arr2.length; i++) {
            for (int j = 0; j < arr1.length; j++) {
                if (arr1[i] == arr2[j]) {
                    mdc = i - 1;
                }
            }
        }
        return mdc;
    }
    

}
