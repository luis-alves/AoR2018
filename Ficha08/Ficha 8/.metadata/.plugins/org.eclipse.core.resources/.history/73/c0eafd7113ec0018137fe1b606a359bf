import java.time.LocalDate;
/**
 * Breve descrição do código
 *
 * @sid 2012
 * @aid 8.9
 */
public class Principal {

    public static void main(String[] args) {
        Pessoa luis = new Pessoa("Luis", "masculino", LocalDate.of(1975,5,9), "Rua sm");
        Pessoa miguel = new Pessoa("Miguel", "masculino", LocalDate.of(1985,2,3), "Rua sm");
        Pessoa oliveira = new Pessoa("Oliveira", "masculino", LocalDate.of(1985,10,9), "Rua sm");
        Pessoa alves = new Pessoa("Alves", "masculino", LocalDate.of(1968,1,9), "Rua sm");
        Pessoa silvia = new Pessoa("Silvia", "feminino", LocalDate.of(1955,11,9), "Rua sm");
        
        Pessoa[] variasPessoas = {luis, miguel, oliveira, alves, silvia};
        
        Pessoa pessoaMaisVelha = new Pessoa("temp", "masculino", LocalDate.of(1900, 1, 1), "morada");
        for (Pessoa pessoa : variasPessoas) {
            if (pessoa.getNascimento().getYear() > pessoaMaisVelha.getNascimento().getYear()) {
                pessoaMaisVelha = pessoa;
            }
        }
        System.out.println(pessoaMaisVelha.getNome());
        
    }
    

}
